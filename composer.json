{
    "name": "amostajo/perfex-crm",
    "description": "Perfex CRM library to customize hooks.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Amostajo\\PerfexCRM\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/global/functions.php"
        ],
        "psr-4": {
            "Amostajo\\PerfexCRM\\Replica\\": "tests/replica/",
            "Amostajo\\PerfexCRM\\Samples\\": "tests/samples/"
        }
    },
    "authors": [
        {
            "name": "Ale Mostajo",
            "email": "amostajo@gmail.com"
        }
    ],
    "archive": {
        "exclude": [
            "/assets",
            "/perfexcrm",
            "/tests"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}
